<div class="row header">
  <div class="col-md-2"></div>
  <div class="col-md-8 middle"></div>
  <div class="col-md-2">
    <% if user_signed_in? %>
      <%= link_to 'Signout', destroy_user_session_path, method: :delete, class: 'logout' %>
    <% else %>
      <% if params[:action].eql?('landing') %>
        <%= link_to 'Sign in', new_user_session_path, class: 'login' %>
      <% end %>
    <% end %>
  </div>
</div>
